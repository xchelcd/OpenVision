<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoomButtons">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">cursive</item>
    </style>

    <style name="InputDataRoom">
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/purple_500</item>
        <item name="hintTextColor">@color/purple_200</item>
    </style>
</resources>